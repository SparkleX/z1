{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"properties": {
        "$schema": {
            "type": "string"
		},		
        "name": {
			"type": "string",
			"minLength": 4,
  			"maxLength": 32
        },
        "description": {
            "type": "string"
		},
		"primaryKey" : {
			"type": "array"
		},
		"columns":{
			"$ref": "#/definitions/columns"
		}		
	},
	"additionalProperties": false,
    "definitions": {
        "columns":{
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/column"
			}
		},
		"column":{
			"type": "object",
			"required": ["name", "type"],
			"properties": {
				"name": {"type": "string"},
				"type": {
					"type": "string",
					"enum": ["string", "number", "decimal","date"]
				},
				"default":{"type": "string"},
				"values" :{
					"$ref": "#/definitions/validValues"
				}
			},
			"additionalProperties": false
		},
        "validValues":{
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/validValue"
			}
		},	
        "validValue":{
			"type": "object",
			"required": ["value", "desc"],
			"properties": {
				"value": {"type": "string"},
				"desc": {
					"type": "string"
				}
			},
			"additionalProperties": false
		}						
    }	
}