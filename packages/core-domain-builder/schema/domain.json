{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"properties": {
        "$schema": {
            "type": "string"
		},
		
        "name": {
			"type": "string",
			"minLength": 4,
  			"maxLength": 32
        },
        "description": {
            "type": "string"
		},
		"columns":{
			"$ref": "#/definitions/columns"
		}		
	},
	"additionalProperties": false,
    "definitions": {
        "columns":{
			"type": "array",
			"minItems": 1,
			"items": {
				"$ref": "#/definitions/column"
			}
		},
		"column":{
			"type": "object",
			"required": ["name", "type"],
			"properties": {
				"name": {"type": "string"},
				"type": {
					"type": "string",
					"enum": ["string", "number", "decimal","date"]
				}
			},
			"additionalProperties": false
		}					
    }	
}